{
  "name": "ericwbailey.design",
  "description": "Boston-based user experience designer",
  "homepage": "https://ericwbailey.design",
  "version": "1.0.0",
  "license": "CC-BY-NC-SA-4.0",
  "author": {
    "name": "Eric Bailey",
    "email": "eric.w.bailey@gmail.com",
    "url": "http://ericwbailey.design"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ericwbailey/ericwbailey.design.git"
  },
  "bugs": {
    "url": "https://github.com/ericwbailey/ericwbailey.design/issues",
    "email": "eric.w.bailey@gmail.com"
  },
  "keywords": [
    "eric",
    "bailey",
    "ericwbailey",
    "boston",
    "design"
  ],
  "scripts": {
    "autoprefix:build": "npx postcss dist/*.css --replace --use autoprefixer",
    "build": "npx npm-run-all -s clean eleventy lint:css lint:js sass:build autoprefix:build js:build",
    "clean": "npx rimraf dist",
    "eleventy": "npx eleventy",
    "js:build": "rollup -c rollup.config.js",
    "js:watch": "rollup -c rollup.config.js -w",
    "json:scss": "json-to-scss src/_data/tokens.json src/css/_tokens.scss",
    "lint:css": "npx stylelint src/css/**/*.scss",
    "lint:js": "eslint \"src/js/**/*.js\" --quiet",
    "serve": "npx @11ty/eleventy --serve",
    "sass:build": "npx sass --no-source-map --load-path=node_modules src/css:dist --style=compressed",
    "sass:watch": "npx sass --no-source-map --load-path=node_modules src/css:dist --watch",
    "start": "npx npm-run-all -p serve sass:watch js:watch"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-navigation": "^0.1.5",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@thoughtbot/eslint-config": "^0.1.0",
    "@thoughtbot/stylelint-config": "^2.0.0",
    "autoprefixer": "^10.0.1",
    "clipboard": "^2.0.6",
    "eslint": "^7.10.0",
    "json-to-scss": "^1.6.2",
    "luxon": "^1.0.0",
    "mappy-breakpoints": "^0.2.3",
    "markdown-it": "^8.4.1",
    "markdown-it-anchor": "^5.0.2",
    "moment": "^2.24.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.29.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.27.0",
    "stylelint": "^13.7.2"
  }
}
