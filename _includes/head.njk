  <style>
    body {
      background-color: #ffffff;
      color: #404040;
      font-family: sans-serif;
      font-size: 1.2em;
      line-height: 1.6;
      margin: 2rem;
      max-width: 65ch;
    }
    h1, h2, h3, h4, h5, h6 {
      line-height: 1.2;
    }
    h1 {
      margin-top: 0;
    }
    h2 {
      margin-top: 3rem;
    }
    img {
      max-height: 100%;
      max-width: 50vw;
    }
    p {
      margin-top: 1.5rem;
    }
    a,
    a:visited {
      color: #1D818C;
    }
    a:hover,
    a:focus {
      text-decoration: none;
    }
    .banner {
      background-color: #f5ed52;
      margin-bottom: 1rem;
      padding: 0.25rem 1.5rem;
    }
    .banner h2 {
      margin-top: 1.5rem;
    }
    @media screen and (prefers-color-scheme: dark) {
      body {
        background-color: #404040;
        color: #ffffff;
      }
      a,
      a:visited {
        color: #48d7e7;
      }
      .banner {
        color: #404040;
      }
    }
  </style>
</head>
